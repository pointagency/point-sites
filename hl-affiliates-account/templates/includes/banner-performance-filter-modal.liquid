<div class="modal fade filter-modal" id="banner-performance-filter-modal" tabindex="-1" role="dialog">
	<div class="p-css-table__fill p-css-table">
		<div class="p-css-table-row">
			<div class="p-css-table-cell p-css-table-cell__center">
				<div class="modal-bg" data-dismiss="modal">
				</div>
				<div class="modal-dialog">
					<div class="modal-content">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="sprite-icon__x-grey-md"></span></button>

						<form class="form-ajax" id="banner-performance-filter-form">
							<div class="modal-body">
								<div class="modal-headline">
									Filter
								</div>
								<div class="row modal-body--inner-panel">
									<div class="form">
										<div class="form-control-group">
											<label for="banner-performance-filter--name">Banner</label>
											<select id="banner-performance-filter--name" class="form-control">
												<option value="">
													Select the banner by name
												</option>
												<option value="">
													HighLow Markets home page
												</option>
												<option value="">
													Experienced Traders home page
												</option>
											</select>
										</div>
									</div>
									<div class="form">
										<div class="form-control-group">
											<label>Select from</label>
											<div>
												<label class="checkbox-wrapper">
													<input id="banner-performance-filter--status--clicked" type="checkbox" checked name="clicked"/>
													&nbsp;&nbsp;Clicked
												</label>
												<label class="checkbox-wrapper">
													<input id="banner-performance-filter--status--traded" type="checkbox" checked name="traded"/>
													&nbsp;&nbsp;Traded
												</label>
											</div>
										</div>
									</div>
									<div class="form">
										<div class="form-control-group">
											<label>Favourite</label>
											<div>
												<label class="checkbox-wrapper">
													<input type="checkbox" id="banner-performance-filter--favourite--yes" checked name="yes"/>
													&nbsp;&nbsp;Yes
												</label>
												<label class="checkbox-wrapper">
													<input type="checkbox" id="banner-performance-filter--favourite--no" checked name="no"/>
													&nbsp;&nbsp;No
												</label>
											</div>
										</div>
									</div>
								</div>
								<div class="modal-footer">
									<div data-dismiss="modal" class="btn-extruded btn btn-alternate form-ajax--submit">
										<i class="sprite-icon__filter-white-sm"></i>&nbsp;
										FILTER
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
